---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ArticleList from '../components/ArticleList.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<h1>Austin Local News</h1>
			<p>
				Stay informed about what's happening in Austin with our AI-curated news coverage. 
				We bring you the latest local stories, updated twice daily.
			</p>
			
			<section class="news-section">
				<h2>Latest News</h2>
				<ArticleList />
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 960px;
		margin: 0 auto;
		padding: 1rem;
	}

	h1 {
		font-size: 2.5rem;
		margin: 2rem 0 1rem;
	}

	.news-section {
		margin: 2rem 0;
	}

	.news-section h2 {
		font-size: 1.8rem;
		margin-bottom: 1rem;
		color: #2c3e50;
	}

	p {
		color: #444;
		line-height: 1.6;
		margin: 1rem 0;
	}
</style>
